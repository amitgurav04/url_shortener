<%= form_for @link, :html => { :class => "form-horizontal link" } do |f| %>
  <% if @link.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @link.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "URL", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :output_url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:output_url) %>
  </div>
  <div class="form-group">
    <%= f.label "Captcha", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.simple_captcha(:multi => true, :label => "Enter characters..") %>
    </div>
    <%=f.error_span(:simple_captcha) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Generate Short URL", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                links_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
